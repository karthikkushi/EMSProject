@model EMSProject.Models.Employee

@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark">
            <h3 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>Edit Employee
            </h3>
        </div>
        <div class="card-body bg-light rounded-bottom">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-semibold"></label>
                    <input asp-for="Phone" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Department" class="form-label fw-semibold"></label>
                    <input asp-for="Department" class="form-control" placeholder="Enter department" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Salary" class="form-label fw-semibold"></label>
                    <input asp-for="Salary" class="form-control" placeholder="Enter salary in ₹" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning me-2">
                        <i class="fas fa-save me-1"></i>Update
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times-circle me-1"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
