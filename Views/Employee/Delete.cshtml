@model EMSProject.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-5">
    <div class="card shadow border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-header bg-danger text-white rounded-top-4">
            <h3 class="mb-0"><i class="fas fa-trash-alt me-2"></i>Confirm Delete</h3>
        </div>
        <div class="card-body bg-light">
            <div class="alert alert-warning text-center">
                <strong>Are you sure you want to delete this employee?</strong>
            </div>
            <h5 class="card-title">@Model.Name</h5>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Department:</strong> @Model.Department</p>
            <p><strong>Salary:</strong> ₹@Model.Salary</p>
        </div>
        <div class="card-footer d-flex justify-content-end bg-white">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-check-circle me-1"></i>Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times-circle me-1"></i>Cancel
                </a>
            </form>
        </div>
    </div>
</div>
