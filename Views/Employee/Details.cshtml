@model EMSProject.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 bg-light mx-auto" style="max-width: 700px;">
        <div class="card-header bg-info text-white rounded-top-4">
            <h3 class="mb-0"><i class="fas fa-id-card me-2"></i>Employee Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Phone</dt>
                <dd class="col-sm-8">@Model.Phone</dd>

                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Model.Department</dd>

                <dt class="col-sm-4">Salary</dt>
                <dd class="col-sm-8">₹@Model.Salary</dd>
            </dl>
        </div>
        <div class="card-footer text-center bg-white">
            <a asp-action="Index" class="btn btn-outline-info">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>
</div>
