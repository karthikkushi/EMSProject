@{
    ViewData["Title"] = "Home Page";
}

<!-- Welcome Card -->
<div class="text-center p-5 bg-white shadow rounded" style="max-width: 700px; margin: auto; margin-top: 50px;">
    <h1 class="display-4 text-primary mb-3">
        <i class="fas fa-laptop-code"></i> Welcome to EMSProject
    </h1>
    <p class="lead text-secondary">
        Manage employees efficiently using ASP.NET Core MVC & ADO.NET.
    </p>
    <p>
        Learn how to build web apps with ASP.NET Core from the official docs:
        <a class="btn btn-outline-primary mt-2" href="https://learn.microsoft.com/aspnet/core" target="_blank">
            <i class="fas fa-book-open"></i> Learn ASP.NET Core
        </a>
    </p>
</div>

<!-- Stats Cards -->
<div class="container mt-5">
    <div class="row text-center">

        <!-- Total Employees -->
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-dark">
                        <i class="bi bi-people-fill"></i> Total Employees
                    </h5>
                    <h4 class="text-primary">@((ViewBag.TotalEmployees ?? 0))</h4>
                </div>
            </div>
        </div>

        <!-- Total Departments -->
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-dark">
                        <i class="bi bi-building"></i> Departments
                    </h5>
                    <h4 class="text-success">@((ViewBag.TotalDepartments ?? 0))</h4>
                </div>
            </div>
        </div>

        <!-- Average Salary -->
        <div class="col-md-4 mb-4">
            <div class="card shadow rounded">
                <div class="card-body">
                    <h5 class="card-title text-dark">
                        <i class="bi bi-currency-rupee"></i> Avg. Salary
                    </h5>
                    <h4 class="text-danger">₹@((ViewBag.AvgSalary != null ? ViewBag.AvgSalary.ToString("N2") : "0.00"))</h4>
                </div>
            </div>
        </div>

    </div>
</div>
